<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:weightSum="1"
    android:orientation="vertical"
    android:background="@color/app_background">
    <!--android:layout_weight="0.34"-->
    <!--android:weightSum="1"-->

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:columnCount="3"
        android:rowCount="3"
        android:useDefaultMargins="true"
        >

        <!--  Sample Dashboard screen with Two buttons -->
        <!--  Button to view all products screen -->
        <Button
            android:id="@+id/btnChinese"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_chinese"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="center_horizontal"
            />

        <Button
            android:id="@+id/btnBiology"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:background="@drawable/btn_biology"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="center_horizontal"

            />

        <Button
            android:id="@+id/btnHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_row="0"
            android:background="@drawable/btn_history"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="center_horizontal"

            />

        <Button
            android:id="@+id/btnEnglish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_row="1"
            android:background="@drawable/btn_english"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="center_horizontal"
            />

        <Button
            android:id="@+id/btnMath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_row="1"
            android:background="@drawable/btn_math"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="center_horizontal"
            />

        <Button
            android:id="@+id/btnGiology"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_row="1"
            android:background="@drawable/btn_giography"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="center_horizontal"
            />

        <Button
            android:id="@+id/btnChemistry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_row="2"
            android:background="@drawable/btn_chemistry"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="center_horizontal"
            />


        <Button
            android:id="@+id/btnPolitics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_row="2"
            android:background="@drawable/btn_socialist"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="center_horizontal"
            />

        <Button
            android:id="@+id/btnPhysics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_row="2"
            android:background="@drawable/btn_physics"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="center_horizontal"
            />

        <!--  Button to create a new product screen -->
    </GridLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:weightSum="1"
        android:orientation="vertical"
        android:layout_marginTop="70dip">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        </LinearLayout>>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="1">


        <Button
            android:id="@+id/btnLogin"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:background="@drawable/bbs_avatar_anonymity_1"
            android:onClick="onClick"
            android:textColor="@drawable/com_textcolor_selector"
            android:textSize="14.0dip" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:text="我的账号"
            android:layout_marginTop="40dip"/>


    </RelativeLayout>

    <!--  Button to Login  -->

 
</LinearLayout>